<div class="container">
  <h1 class="my-4">Edit a Blog Here</h1>
  <form action="/create-blog" method="POST">
    <div class="form-group mb-4">
      <label for="title" class="h5">Title:</label>
      <input type="text" class="form-control" id="title" name="title" value="{{blog.title}}" />
    </div>
    <div class="form-group mb-4">
      <label for="author" class="h5">Author:</label>
      <input type="text" class="form-control" id="author" name="author" value="{{blog.author}}" />
    </div>
    <div class="form-group mb-4">
      <label for="content" class="h5">Content:</label>
      <textarea class="form-control" id="content" name="content" rows="6">{{blog.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary mb-4">Update Blog</button>
  </form>
</div>
